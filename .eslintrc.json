{
  "extends": [
    "universe/native",
    "universe/shared/typescript-analysis"
  ],
  "overrides": [
  {
    "files": [
      "*.ts",
      "*.tsx",
      "*.d.ts"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  }
 ],
  "rules": {
    "prettier/prettier": [
      "error", {
        "parser": "flow",
        "semi": false,
        "singleQuote": true
      }
    ]
  }
}
